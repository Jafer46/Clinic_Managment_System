@using CMS.Models
@inject IHttpContextAccessor _httpContextAccessor
@model BALibrary.Triage.PatientTriage

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
    string pageName = ViewContext.RouteData.Values["controller"].ToString();
    string areaName = ViewContext.RouteData.Values["area"].ToString();
    int userRoleId = Convert.ToInt32(_httpContextAccessor.HttpContext.Session.GetString(SessionVariable.SessionKeyUserRoleId));

}

<h1>Details</h1>

<div>
    <h4>PatientTriage</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt class = "col-sm-2">
            Patient's Full Name 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Session.Patient.FirstName)
            @Html.DisplayFor(model => model.Session.Patient.LastName)
        </dd>
    </dl>
</div>
@if (Common.isAuthorized(userRoleId, areaName, "TriageDetails", "Create"))
{
    <dl class="row">
        <dt class="col-sm-2">
            More Details
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="TriageDetails" asp-action="Create" asp-route-id="@Model.Id">Add Detail</a>
        </dd>
    </dl>
}
<div>
    More Detail
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Case
            </th>
            <th>
                Case Details
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Detail)
        {
            <tr>
                <td>
                    @item.Case
                </td>
                <td>
                    @item.CaseDetail
                </td>
                <td>
                    @if (Common.isAuthorized(userRoleId, areaName, "TriageDetails", "Edit"))
                    {
                        <a asp-controller="TriageDetails" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }|
                    @if (Common.isAuthorized(userRoleId, areaName, "TriageDetails", "Details"))
                    {
                        <a asp-controller="TriageDetails" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    }|
                    @if (Common.isAuthorized(userRoleId, areaName, "TriageDetails", "Delete"))
                    {
                        <a asp-controller="TriageDetails" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (Common.isAuthorized(userRoleId, areaName, pageName, "Edit"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }|
    <a asp-action="Index">Back to List</a>
</div>
