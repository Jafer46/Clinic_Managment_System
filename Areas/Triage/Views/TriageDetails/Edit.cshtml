@model BALibrary.Triage.TriageDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TriageDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PatientTriageId" class="control-label"></label>
                <select asp-for="PatientTriageId" class="form-control" asp-items="ViewBag.PatientTriageId"></select>
                <span asp-validation-for="PatientTriageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case" class="control-label"></label>
                <input asp-for="Case" class="form-control" />
                <span asp-validation-for="Case" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaseDetail" class="control-label"></label>
                <textarea asp-for="CaseDetail" class="form-control"></textarea>
                <span asp-validation-for="CaseDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
