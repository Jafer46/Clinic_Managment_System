@using CMS.Models
@inject IHttpContextAccessor _httpContextAccessor
@model IEnumerable<BALibrary.Payment.LabPayment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
    string pageName = ViewContext.RouteData.Values["controller"].ToString();
    string areaName = ViewContext.RouteData.Values["area"].ToString();
    int userRoleId = Convert.ToInt32(_httpContextAccessor.HttpContext.Session.GetString(SessionVariable.SessionKeyUserRoleId));

}

<br />

@if (Common.isAuthorized(userRoleId, areaName, pageName, "Create"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <td>
                Payment by
            </td>
            <td>
                Generated by
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Checked)
            </th>
            <th>
                Total amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LabRequest.Session.Patient.FirstName)
                @Html.DisplayFor(modelItem => item.LabRequest.Session.Patient.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LabRequest.Session.Docter.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Checked)
            </td>
            <td>
                @Common.TotalAmount(item.Id)
            </td>
            <td>
                @if(Common.isAuthorized(userRoleId,areaName,pageName,"Edit"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                }|
                @if(Common.isAuthorized(userRoleId,areaName,pageName,"Details"))
                {
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                }|
                @if(Common.isAuthorized(userRoleId,areaName,pageName,"Delete"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
